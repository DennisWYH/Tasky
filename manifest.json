{
    "name": "Stand a flag",
    "description": "Manage your long term tasks.",
    "version": "1.2.2",
    "manifest_version": 2,
    "author": "Yunhai",
    "short_name": "flag",

    "permissions": [
        "storage"
    ],

    "background":{
        "scripts":["js/eventPage.js", "popup.html"],
        "persistent":false
    },

    "browser_action":{
    	"default_popup": "popup.html",
    	"default_icon": {
            "16": "images/flag1.png",
            "24": "images/flag2.png",
            "32": "images/flag3.png",
            "64": "images/flag4.png"
        },
        "default_title":"Stand a flag"
    },


    "commands":{
    	"_execute_browser_action":{
    		"suggested_key":{
    			"default":"Ctrl+Shift+F",
    			"mac":"MacCtrl+Shift+F"
    		},
    		"description":"Opens hello.html" 
    	}
    }
}